generator client {
  provider = "prisma-client-js"
}

datasource db {
  // provider = "postgresql"
  // url      = env("DATABASE_URL")
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Book {
  id   Int     @id @default(autoincrement())
  name String? @unique
}

model User {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  password  String
  email     String    @unique
  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt
}
